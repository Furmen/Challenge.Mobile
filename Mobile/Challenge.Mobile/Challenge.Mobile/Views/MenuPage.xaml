<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:Challenge.Mobile="clr-namespace:Challenge.Mobile.ViewModels"
                  x:Class="Challenge.Mobile.MenuPage"
                  Title="Master">
    <ContentPage.Content
            Title="Menú"
            BackgroundColor="White"
            Padding="0,40,0,0">
        <StackLayout>
            <Label Text="My menu" />
            <Button Command="{Binding GoHomeCommand}"
                        BackgroundColor="White"
                        x:Name="MenuItemGoHome"
                        TextColor="Black"
                        Text="Home"
                        ImageSource="ic_home.png" />
            <Button Command="{Binding GoLogoutCommand}"
                        x:Name="MenuItemGoLogout"
                        BackgroundColor="White"
                        TextColor="Black"
                        Text="Logout"
                        ImageSource="ic_location.png" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>